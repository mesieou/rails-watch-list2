<div class="banner">
 <h1>This is where you make your favorate movie lists</h1>
 <p>Create a list and add any movie in the world </p>
 <%= link_to 'Get started', new_list_path, class: 'btn btn-outline-primary text-decoration-none m-3'  %>
</div>


<div class="container py-3">
  <h1>My Lists</h1>

  <div class="cards">
    <% @lists.each do |list| %>
      <div class="list-card">
        <h3><%= list.name %></h3>
       </div>
    <% end %>
  </div>
</div>
