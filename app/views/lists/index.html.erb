<div class="banner">
 <h1>This is where you make your favorate movie lists</h1>
 <p>Create a list and add any movie in the world </p>
 <%= link_to 'Get started', new_list_path, class: 'btn btn-outline-primary text-decoration-none m-3'  %>
</div>

<div class="container m-3">
  <div class="d-flex justify-content-between align-items-baseline">
    <h1>My Lists</h1>
    <%= link_to 'âž• Add List', new_list_path, class: 'text-decoration-none mx-2' %>
  </div>
  <div class="lists">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do  %>
        <div class="list-card" style="
                                 background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                                 url('<%= cl_image_path(list.photo.key, height: 300, crop: :fill) %>')">
          <h3><%= list.name %></h3>
        </div>
       <% end %>
    <% end %>
  </div>
</div>
