<div class="container w-50 py-5 border-bottom">
  <h1>New Movie</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment, placeholder: 'It was a great movie' %>
    <%= f.submit class: 'btn btn-outline-primary'%>
  <% end %>
</div>
<div class="container w-50 py-2">
  <%= link_to "👈🏽 Go back to #{@list.name} list", list_path(@list), class: 'text-decoration-none'  %>
</div>
